#!/bin/sh
# PCP QA Test No. 707
# Exercise python PMAPI layer
#
# Copyright (c) 2012, 2013 Red Hat.
#

seq=`basename $0`
echo "QA output created by $seq"

# get standard environment, filters and checks
. ./common.product
. ./common.filter
. ./common.check

status=1	# failure is the default!
$sudo rm -f $tmp.* $seq.full
trap "rm -f $tmp.*; exit \$status" 0 1 2 3 15

_check_full()
{
    mode=$1

    $PCP_ECHO_PROG $PCP_ECHO_N "$mode - ""$PCP_ECHO_C"
    if grep OK $seq.full
    then
        :
    else
        # Give some hint as to what went wrong ...
        #
        $PCP_AWK_PROG <$seq.full '
$1 == "FAIL:"			{ want = 1 }
$1 == "File"			{ want = 1 }
want == 1 && $1 == "Ran" 	{ exit }
want == 1			{ print }'
    fi
}

# real QA test starts here

# test live mode
python $here/src/test_pcp.python >$seq.full 2>&1
_check_full "live"

# test archive replay
python $here/src/test_pcp.python src/all-sles9-sp1.0 >>$seq.full 2>&1
_check_full "archive"

# success, all done
status=$?
exit
