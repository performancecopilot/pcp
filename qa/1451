#!/bin/sh
# PCP QA Test No. 1451
# pmdumptext -i botches scaling ...
#
# valgrind variant, see qa/1450 for the non-valgrind variant
#
# Marko's bug https://github.com/performancecopilot/pcp/issues/406 from
# Dec 2017!
#
# Copyright (c) 2023 Ken McDonell.  All Rights Reserved.
#
# check-group-include: pmdumptext
#

seq=`basename $0`
echo "QA output created by $seq"

# get standard environment, filters and checks
. ./common.product
. ./common.filter
. ./common.check

_check_valgrind

_cleanup()
{
    cd $here
    $sudo rm -rf $tmp $tmp.*
}

status=0	# success is the default!
$sudo rm -rf $tmp $tmp.* $seq.full
trap "_cleanup; exit \$status" 0 1 2 3 15

# real QA test starts here
export seq
./1450 --valgrind | $PCP_AWK_PROG '
skip == 1 && $1 == "==="       { skip = 0 }
/^=== std err ===/             { skip = 1 }
skip == 0              { print }
skip == 1              { print >>"'$here/$seq.full'" }'

# success, all done
exit
