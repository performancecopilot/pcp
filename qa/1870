#!/bin/sh
# PCP QA Test No. 1870
# Exercise GuideLLM JSON converter script (guidellm2pcp).
#
# Copyright (c) 2025 Red Hat.  All Rights Reserved.
#

seq=`basename $0`
echo "QA output created by $seq"

# get standard environment, filters and checks
. ./common.product
. ./common.filter
. ./common.check

test -x $PCP_BIN_DIR/guidellm2pcp || _notrun No guidellm2pcp script

_cleanup()
{
    cd $here
    $sudo rm -rf $tmp $tmp.*
}

status=0	# success is the default!
trap "_cleanup; exit \$status" 0 1 2 3 15

_filter()
{
    sed \
	-e "s@$tmp@TMP@g" \
    # end
}

# real QA test starts here
files=`ls -1 guidellm/*.json | LC_COLLATE=POSIX sort`

for json in $files
do
    echo "== guidellm2pcp $json"
    guidellm2pcp -a $tmp.archive $json
    pminfo -z -f -a $tmp.archive guidellm
    pmval -z -t 60sec -a $tmp.archive guidellm.duration | _filter
    rm -f $tmp.archive*
done

# success, all done
exit
