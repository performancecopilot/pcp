#!/bin/sh
# PCP QA Test No. 526
# Exercise metric name validation in Log Import API
#
# Copyright (c) 2013, Red Hat.
#

seq=`basename $0`
echo "QA output created by $seq"

# get standard environment, filters and checks
. ./common.product
. ./common.filter
. ./common.check

[ $PCP_VER -ge 30800 ] || _notrun "Installed libpcp_import lacks name checks"
_check_valgrind

status=1	# failure is the default!
$sudo rm -rf $tmp.* $seq.full
trap "cd $here; rm -rf $tmp.*; exit \$status" 0 1 2 3 15

# real QA test starts here
for name in '.' 'abc.123' '1bc.123' 'abc.xyz' 'a' '1' 'kernel.all.load' 'ab.cd.'
do
    echo
    _run_valgrind src/check_import_name "$name"
done

status=0
exit
