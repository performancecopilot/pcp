#! /bin/sh
# PCP QA Test No. 082
# Test permissions left on namespace by pmnsadd, pmnsdel
#
# Copyright (c) 1995-2002 Silicon Graphics, Inc.  All Rights Reserved.
#

seq=`basename $0`
echo "QA output created by $seq"

# get standard filters
. ./common.product
. ./common.filter

trap "cd $here; rm -rf $tmp; exit" 0 1 2 3 15

_ls()
{
    ls -l \
    | sed \
	-e '/^total /d' \
	-e 's/-rw-r--r--\./-rw-r--r--/' \
	-e 's/----------\./----------/' \
    | $PCP_AWK_PROG '
	{ print $1, $NF }'
    echo
}

# real QA test starts here

umask 022

rm -rf $tmp
mkdir $tmp
cd $tmp
cat <<End-of-File >root
root {
    fred	0:0:0
    bear	0:0:1
}
End-of-File

cat <<End-of-File >foo
foo {
    bar		1:0:0
}
End-of-File

umask 777
touch new-default-mode
echo "permissions before add:"
_ls

pmnsadd -n root foo

echo
echo "permissions after add:"
_ls

echo "Expect fred, bear and foo.bar ..."
pminfo -n root

pmnsdel -n root foo

echo
echo "permissions after delete:"
_ls

echo "Expect fred and bear ..."
pminfo -n root

exit 0
