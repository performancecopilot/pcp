# pmlogger(1) configuration file suitable for pmstat(1)
#

%include "options.pmstat"

log mandatory on default {
    kernel.all.load   
    swap.used            
    mem.util.free        
    mem.util.bufmem      
    mem.util.cached      
    swap.pagesin              
    swap.pagesout             
%ifdef have_disk_block_stats
    disk.all.blkread     
    disk.all.blkwrite    
%else
    disk.all.read     
    disk.all.write    
%endif
    kernel.all.intr      
    kernel.all.pswitch   
    kernel.all.cpu.nice  
    kernel.all.cpu.user  
    kernel.all.cpu.intr
    kernel.all.cpu.sys
    kernel.all.cpu.idle
    kernel.all.cpu.wait.total
    kernel.all.cpu.steal
}

