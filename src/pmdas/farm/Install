# Install the Seagate Field Accessible Reliability Metrics (FARM) Log PMDA
#

. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=farm

which smartctl > /dev/null 2>&1
if [ $? -ne 0 ]
then
	echo "smartmontools 'smartctl' binary not found, cannot proceed"
	status=1
	exit
fi

pmdaSetup
pmdaInstall

exit
