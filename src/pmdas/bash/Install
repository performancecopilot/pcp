. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=bash
dso_opt=false
socket_opt=false

if [ ! -e "$PCP_TMP_DIR/bash" ]
then
    echo "creating $PCP_TMP_DIR/bash"
    mkdir -p -m 1777 "$PCP_TMP_DIR/bash"
    chown $PCP_USER:$PCP_GROUP "$PCP_TMP_DIR/bash"
fi

pmdaSetup
pmdaInstall
exit
