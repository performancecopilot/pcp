# Install the gpsd PMDA
#

. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=gpsd
perl_opt=true
daemon_opt=false

perl -e "use JSON" 2>/dev/null
if test $? -ne 0; then
    echo "JSON perl module is not installed"
    status=1
    exit
fi

pmdaSetup
pmdaInstall
exit
