. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=mmv
dso_opt=true
daemon_opt=false
pmda_interface=4
pmns_source=root_mmv

if [ ! -e "$PCP_TMP_DIR/mmv" ]
then
    echo "creating $PCP_TMP_DIR/mmv"
    mkdir -p -m 1777 "$PCP_TMP_DIR/mmv"
fi

pmdaSetup
pmdaInstall
exit
