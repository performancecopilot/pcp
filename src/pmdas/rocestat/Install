# Install the Rocestat PMDA
#

. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=rocestat
python_opt=true
daemon_opt=false

if [[ ! -d /sys/class/infiniband ]]; then
    if ! lsmod | grep -q '^ib_core'; then
        echo "IB kernel modules are not loaded" >&2
    else
        echo "No IB devices detected" >&2
    fi
    status=1
    exit
fi

pmdaSetup
pmdaInstall
exit
