sendmail {
    start_date	SENDMAIL:0:0
    permailer
    total
}

sendmail.permailer {
    msgs_from	SENDMAIL:1:0
    bytes_from	SENDMAIL:1:1
    msgs_to	SENDMAIL:1:2
    bytes_to	SENDMAIL:1:3
}

sendmail.total {
    msgs_from	SENDMAIL:2:0
    bytes_from	SENDMAIL:2:1
    msgs_to	SENDMAIL:2:2
    bytes_to	SENDMAIL:2:3
}
