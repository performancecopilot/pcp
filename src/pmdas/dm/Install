# Install the Device Mapper PMDA
#

. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=dm
pmns_name="dmcache dmthin dmstats vdo"
forced_restart=true	# for env vars

which dmsetup >/dev/null 2>&1
if [ $? -ne 0 ]
then
    echo "Device Mapper 'dmsetup' binary not found, cannot proceed"
    status=1
    exit
fi

pmdaSetup
pmdaInstall

NODEV="No devices found"
NOSTATS=""
DMSTATS=`dmsetup stats list 2>/dev/null`
if [ "$NODEV" = "$DMSTATS" ]; then
	echo ""
	echo "NOTE: There are currently no device-mapper devices."
	echo "See also \"man pmdadm\" or \"man dmsetup\" "
elif [ "$NOSTATS" = "$DMSTATS" ]; then
	echo ""
	echo "NOTE: There are no device-mapper statistics regions."
	echo "To use the dmstats metrics you must create statistics regions."
	echo "See also \"man pmdadm\" "
fi

exit
