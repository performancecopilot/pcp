# Install the DTS (Data Transformation Services) dtsrun log file PMDA
#

. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=dtsrun
perl_opt=true
daemon_opt=false
forced_restart=false

pmdaSetup

if $do_pmda
then
    while true
    do
	echo
	$PCP_ECHO_PROG $PCP_ECHO_N "DTS log filename? ""$PCP_ECHO_C"
	read logfile
	[ ! -z "$logfile" ] && break
	echo
    done
    args="$args logfile"
fi

pmdaInstall
exit 0
