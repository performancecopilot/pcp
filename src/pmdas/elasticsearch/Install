# Install the ElasticSearch PMDA
#

. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=elasticsearch
perl_opt=true
daemon_opt=false

for module in JSON LWP::UserAgent
do
    perl -e "use $module" 2>/dev/null 
    if test $? -ne 0
    then
        echo "$module perl module is not installed"
	status=1
	exit
    fi
done

pmdaSetup
pmdaInstall
exit
