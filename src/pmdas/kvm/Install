. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=kvm
daemon_opt=true
pipe_opt=true
pmns_source=root_kvm

pmdaSetup
pmdaInstall
exit 0
